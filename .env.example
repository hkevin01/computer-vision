# Docker environment configuration for Stereo Vision app
# Copy this file to .env and customize as needed

# === Image and Service Configuration ===
IMAGE_NAME=stereo-vision:local
SERVICE_NAME=stereo-vision-app

# === Port Configuration ===
# Main application port
APP_PORT=8080
DEBUG_PORT=8081

# Development ports
DEV_APP_PORT=8082
DEV_DEBUG_PORT=8083
DEV_GDB_PORT=9999

# Simple version port
SIMPLE_PORT=8084

# === Build Configuration ===
# Enable GPU acceleration (set to true if you have NVIDIA GPU)
ENABLE_CUDA=false

# Enable AMD GPU acceleration (set to true if you have AMD GPU)
ENABLE_HIP=false

# === Display Configuration (for GUI) ===
# X11 Display (Linux GUI support)
DISPLAY=:0

# Qt Platform Abstraction (xcb for GUI, offscreen for headless)
QT_QPA_PLATFORM=offscreen

# === Docker Platform (useful for Apple Silicon Macs) ===
DOCKER_PLATFORM=linux/amd64

# === Development Configuration ===
# Build arguments for development
BUILD_ARGS=CMAKE_BUILD_TYPE=Debug

# Volume mounts for development
MOUNTS=.:/app,dev-cache:/app/build

# === Application Configuration ===
# OpenCV settings
OPENCV_GENERATE_PKGCONFIG=ON

# === Advanced Configuration ===
# Memory limits (uncomment if needed)
# MEM_LIMIT=4g
# MEMSWAP_LIMIT=8g

# CPU limits (uncomment if needed)
# CPUS=2.0

# === GUI Configuration ===
# Set to true for GUI development (requires X11 setup)
ENABLE_GUI=false

# === Debugging Configuration ===
# Enable for debugging with GDB
ENABLE_DEBUG=false
