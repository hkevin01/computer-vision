# Code Style Configuration
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{cpp,hpp,h,c,cc,cxx}]
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[CMakeLists.txt,*.cmake]
indent_size = 2

[*.sh]
indent_size = 2
